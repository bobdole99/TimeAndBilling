@model EmployeeBanking

<h1> Employee Detail Information</h1>
<h3> @Model.FullName</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Save" role="form">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="EmployeeID" class="control-label"></label>
                <input asp-for="EmployeeID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NameOfBank" class="control-label"></label>
                <input asp-for="NameOfBank" class="form-control" />
                <span asp-validation-for="NameOfBank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstituteNumber" class="control-label"></label>
                <input asp-for="InstituteNumber" class="form-control" />
                <span asp-validation-for="InstituteNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransitNumber" class="control-label"></label>
                <input asp-for="TransitNumber" class="form-control" />
                <span asp-validation-for="TransitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label"></label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" asp-controller="EmployeeBanking"
                           asp-action="Save" asp-route-id="@Model.Employee" value="Save" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" asp-controller="EmployeeBanking" asp-action="Cancel" value="Cancel" />
                </div>
            </div>
        </form>
    </div>
</div>